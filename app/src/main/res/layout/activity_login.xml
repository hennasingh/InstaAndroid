<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".login.LoginActivity">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:contentDescription="@string/backdrop_description"
      android:src="@drawable/login_graphic"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dimen_160"
      android:background="@drawable/sign_in_gradient"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_23"
        android:layout_marginEnd="@dimen/dimen_23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_23"
        app:cardCornerRadius="@dimen/dimen_4dp"
        app:cardElevation="2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_23"
            android:background="@color/light_pink"
            android:paddingBottom="@dimen/dimen_23">

            <TextView
                android:id="@+id/signInTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/signIn"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_26"
                android:textColor="@color/greyish_black"/>

            <RelativeLayout
                android:id="@+id/sign_in_button"
                android:layout_width="@dimen/dimen_220"
                android:layout_height="@dimen/dimen_60"
                android:layout_marginTop="@dimen/dimen_15"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/sign_in_round_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signInTitle">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_80"
                    android:src="@drawable/instagram"
                    android:contentDescription="@string/instagram_login"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/logo"
                    android:textSize="@dimen/text_14"
                    android:fontFamily="casual"
                    android:textColor="@color/colorPrimaryDark"/>

            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
